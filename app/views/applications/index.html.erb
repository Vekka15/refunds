
<% if current_user.nil? %>

<%else%>
  <% if current_user.admin? %>
    <div> To jest admin </div>
    <%= link_to('Nowa kategoria', new_category_path) %>
    <table align="center" style="margin-top: 5%">
      <tr>
        <th> Name </th>
        <th> Date </th>
        <th> Money </th>
        <th> Category </th>
        <th> Accept </th>
        <th> Reject </th>
      </tr>
    <% @applications.each do |a| %>
      <%if a.acceptance==nil %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= a.amount_of_money %></td>
        <td><%= Category.find(a.category_id).name %></td>
        <td>  <%= link_to("Akceptuj", refundations_path(a), method: :post)%></td>
        <td>  <%= link_to("OdrzuÄ‡", applications_path(a), method: :put) %></td>
      </tr>
      <%end%>
    <%end%>
  <%else%>
    <div style="margin-top: 12%">
      <table align="center">
        <tr>
          <th> Name </th>
          <th> Date </th>
          <th> Money </th>
          <th> Category </th>
          <th> State </th>
        </tr>
      <% @applications.each do |a| %>
        <%if(a.user_id==current_user.id) %>
        <tr>
          <td><%= a.name %></td>
          <td><%= a.created_at.strftime("%d-%m-%Y") %> </td>
          <td> <%= a.amount_of_money%> </td>
          <td> <%= Category.find(a.category_id).name %> </td>
          <% if a.acceptance==true %><td> Accepted</td>
          <%elsif a.acceptance == false %> <td>Rejected</td>
          <%elsif a.acceptance == nil %><td> Waiting </td>
          <%end%>
        </tr>
        <%end%>
      <%end%>
    </table>
    </div>
    <%end%>

<%end%>
