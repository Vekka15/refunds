<h2 id="title">Refunds</h2>

 <%- flash.each do |name, msg| -%>
     <center><div style="margin-bottom: 2%"><%= content_tag :div , msg, :id => ("flash_#{alert}" if msg.is_a?(String)), :class => "message-box"%></center>
   <%- end -%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => :email, :class => "login_text_field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => :password, :class => "login_text_field"  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, :class => "checkbox"%>
      <%= f.label :remember_me, :class => 'login_site_link' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'login_site_link', :style => "margin-left: 9%"%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "login_submit" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
