
<h2 id="title">Refunds</h2>

<h2 style="text-align: center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => :email, :class => "login_text_field" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "login_submit"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
